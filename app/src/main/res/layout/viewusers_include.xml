<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User ID:"
            android:textSize="24sp">

        </TextView>

        <TextView
            android:id="@+id/useridtext"
            android:layout_width="match_parent"
            android:text=""
            android:textSize="24sp">

        </TextView>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email ID:"
            android:textSize="24sp">

        </TextView>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/emailaddridtext"
            android:layout_width="match_parent"
            android:text=""
            android:textSize="24sp">

        </TextView>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valid User:"
            android:textSize="24sp">

        </TextView>

        <TextView
            android:id="@+id/isvalididtext"
            android:layout_width="match_parent"
            android:text=""
            android:textSize="24sp">

        </TextView>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin User:"
            android:textSize="24sp">

        </TextView>

        <TextView
            android:id="@+id/isadminidtext"
            android:layout_width="match_parent"
            android:text=""
            android:textSize="24sp">

        </TextView>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/vusubmitbuttonidtext"
            android:layout_height="wrap_content"
            android:text="Edit User"
            android:textSize="24sp"/>
    </TableRow>
</TableLayout>


